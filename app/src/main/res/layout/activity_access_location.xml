<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ui.location.AccessLocationActivity">

    <ImageView
        android:id="@+id/ivMap"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_map"
        app:layout_constraintBottom_toTopOf="@+id/btnAccessLocation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btnAccessLocation"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/orange"
        android:text="ACCESS LOCATION"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:cornerRadius="12dp"
        app:icon="@drawable/ic_location_arrow"
        app:iconGravity="textEnd"
        app:iconPadding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/tvLocationNotice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivMap" />

    <TextView
        android:id="@+id/tvLocationNotice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="DFOOD WILL ACCESS YOUR LOCATION\nONLY WHILE USING THE APP"
        android:textAlignment="center"
        android:textColor="#8A8A8E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAccessLocation" />

</androidx.constraintlayout.widget.ConstraintLayout>